<!-- nav panel -->
<app-header-layout id="drawer" has-scrolling-region>
    <% if logged_in? %>
        <app-header fixed>
            <div class="avatar-container">
                <div class="image"></div>
            </div>
            <div class="contact-info">
                <div class="name"><%= current_user.name %></div>
                <div class="email"><%= current_user.email %></div>
            </div>
        </app-header>
    <% end %>
    <!-- nav menu -->
    <paper-listbox>
        <paper-item>Home</paper-item>
        <paper-item>Levels</paper-item>
        <paper-item>Profile</paper-item>
    </paper-listbox>
</app-header-layout>
